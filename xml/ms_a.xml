      <div type="chapter" n="1">
	<pb n="12v" corresp="IMG_1216_TOP"/>
	<lb n="6"/>
	<lg n="146">
	  <l>samucitanr̥patuṁgadevamārgga</l>
	  <l>kramanamanābhimukharkkaḷappa</l>
	  <l>kramasahitavagamya<add place="above">+</add></l>
	  <l>śra<unclear>ma</unclear><add place="margin-right">rūpatā<lb/>kāvya</add><pb n="13r" corresp="IMG_1216_BOTTOM"/><lb n="1"/>vadamaṁnirapāyaneydalāppalar |</l>
	</lg>
	<lg n="147">
	  <l>atiśayadavaḷorviśo<space quantity="1" unit="chars"/>tāḷaṁṁ</l>
	  <l>kr̥timatinītiniraṁtarapratitaṁ</l>
	  <l>śrutiyuvatikr̥topacārasāra</l>
	  <l>svataguṇa<del>ma</del><add place="below">di</add>ṁ kr̥takr̥<lb n="2"/>tyamakkuṁ</l>
	</lg>
	<lg n="148">
	  <l><unclear>nuḍigaḷ</unclear>oḍaṁbaḍal pagedavolbageyaṁmigalaṁdanāḷ</l>
	  <l>nuḍiyabeḍaṁge kaṁnaḍada mātinoḷ ā vikaṭākṣaraṁgaḷoḷ</l>
	  <l>toḍarade sakkadaṁgaḷa padaṁ pavaṇāgire m<unclear>e</unclear><lb n="3"/>lpuvett<unclear>u</unclear> dāṁ</l>
	  <l>guḍiviḍuvaṁte nīḷdu <space type="binding-hole"/> nile peḷvudu nītiniraṁtarakramaṁ |</l>
	</lg>
	<lg n="149">
	  <l>saka<add place="above">+</add><add place="below">lā</add>ḷāpakaḷāpakathitavyāvṛttiyo<space type="binding-hole"/> ḷkūḍici</l>
	  <l>trakaraṁbolparabhāgabhāvavi<gap reason="lost" extent="1" unit="characters"/><lb n="4"/>dvarnakra<unclear>mā</unclear>vr̥ttiyaṁ</l>
	  <l>prakaṭaṁ<space type="binding-hole"/>māḍirepeḷda citrakr̥tiyaṁvyavarnnisuttaṁ kavi</l>
<l>prakaraṁśrīvi<space type="binding-hole"/>jayaprabhūtamanidaṁkaikoḷvudīmāḷke<lb n="5"/>yaṁ ||</l>
	</lg>
	<lg n="c">
	  <l>gadya | idu paramaśrīnr̥patuṁgadevānumatamappa kavirājamārgadoḷ doṣādoṣānuvarnanānirnnayaṁ prathamaparicchedaṁ || ——u ||</l>
