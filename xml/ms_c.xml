    <body>
      <div type="chapter" n="1">
	<pb n="5v"/>
	<lb n="9"/>
	<lg n="146">
	  <l>samucitanrupatuṁgadevamārgga</l>
	  <l>kramamumanabhimukharkkaḷ appar</l>
	  <l>kramasahitamagamyarūpakāvya</l>
	  <l>śramapadanirapāyakeydalārppar || 147 ||</l>
	</lg>
	<lg n="147">
	  <l>atiśayadhavaḷo<lb n="10"/>rvvipoditāḷaṁ</l>
	  <l>krutamatinutiniraṁtarapratitaṁ</l>
	  <l>śrutiyuvatikrutopacārasāra</l>
	  <l>svataguṇagaṇadiṁde krutyamakkuṁ || 148 ||</l>
	</lg>
	<lg n="148">
	  <l>vr̥ | nuḍigaḷoḍaṁbaḍalbagevolbageyaṁmigaliyyadodaṁdenā</l>
	  <l><unclear>ḻ</unclear>nuḍiyabeḍaṁgekaṁna<lb n="11"/>ḍadamātinoḷāvikaṭākṣaraṁgaḷoḷ</l>
	  <l>toḍaradesakkadaṁgaḷapadaṁpavaṇāgiremelpuvettudāṁ</l>
	  <l>guḍiviḍidaṁteniḷvanitapeḷvudu nitiniraṁtarakramaṁ || 149 ||</l>
	</lg>
	<lg n="149">
	  <l>sakaḷāḷāpakaḷākaḷāpakathitavyāvruttiyoḷkūḍi<pb n="6r"/><lb n="1"/><label type="line-number">1</label><unclear>ci</unclear></l>
	  <l>trakaraṁbolparabhāgabhāvavilasadvarṇakramāvruttiyaṁ</l>
	  <l>prakaṭaṁmāḍirepeḷdacitrakrutiyaṁvyāvarṇṇisuttaṁkavi</l>
	  <l>prakaraśrīvijayaprabhūtamanidaṁkaikoḷvudimāḷkeyaṁ || 150 ||</l>
	</lg>
	<trailer n="Colophon">
	  <ab>gadya || yadu paramaśrīnrupatuṁgadevā<lb n="2"/><label type="line-number">2</label>numatam appa kavirājamārggadoḷdoṣādoṣānuvarṇnananirnnayaṁ prathamaparicchedaḥ ||</ab>
	  <ab>maṁgaḷa mahā śrī śrī śrī śrī śrī śrī śrī śrī śrī śrī śrī śrī śrī ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ ~ rastu ||</ab>
	  <ab><lb n="3"/><label type="line-number">3</label> śubham astu ||</ab>
	</trailer>
      </div>
      <div type="chapter" n="2">
	<lg n="1">
	  <l>paramaśrīkrutivadhuvā</l>
	  <l>śarīraśobhākaraṁgaḷappaguṇaṁgaḷ |</l>
	  <l>niratiśayālaṁkāra</l>
	  <l>prarūpitaṁgaḷpurāṇakavividitaṁgaḷ || 1 ||</l>
	</lg>
	<lg n="2">
	  <l>sāraśrīnrupatuṁgavi</l>
	  <l>cārakramama<space quantity="1" unit="chars"/>gaṇaneyoḷ paramālaṁ</l>
	  <l>kāravibhāgaṁ vividhā</l>
	  <l>kāraṁ<lb n="4"/><label type="line-number">4</label>śabdārtthabhedadiṁderaḍakkuṁ || 2 ||</l>
	</lg>
	<lg n="3">
	  <l>aṁnnegamadaroḷa <space type="binding-hole"/> ge samu</l>
	  <l>tpaṁnnaprādhānyamanyamartthādhāraṁ</l>
	  <l>muṁnaṁ śabdālaṁkāra</l>
	  <l>manniścitam akke peḷva māḷkeyoḷ eṁnnā || 3 ||</l>
	</lg>
	<lg n="4">
	  <l>yalligidu takkudillige</l>
	  <l>polladideṁdaṟidu samari <lb n="5"/><label type="line-number">5</label>ballaṁtellaṁ |</l>
	  <l>nelluṁ mosaruṁguḍidaṁ</l>
	  <l>tallade tallaṇi <space type="binding-hole"/>sadalasadiḍu mrudupadamaṁ || 4 ||</l>
	</lg>
      </div>
    </body>
